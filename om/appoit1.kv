<AppoitmentScreen>:
    NavigationLayout:
        ScreenManager:
            Screen:

                MDToolbar:
                    title: 'Book Appoitment'
                    md_bg_color: .2, .2, .2, 1
                    specific_text_color: 1, 1, 1, 1
                    left_action_items: [["menu", lambda x: nav_drawer.toggle_nav_drawer()]]
                    pos_hint:{'center_x': 0.5, 'center_y': 0.95}
                    elevation:5

                    MDFlatButton:
                        text: "Back"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        pos_hint:{"center_y":0.5}
                        on_release: root.manager.current = 'lib'

                MDTextField:
                    hint_text: "Name"
                    mode: "rectangle"
                    pos_hint:{'center_x': 0.5, 'center_y': 0.7}
                    size_hint_x:None
                    width:300

                MDTextField:
                    hint_text: "Email"
                    mode: "rectangle"
                    pos_hint:{'center_x': 0.5, 'center_y': 0.79}
                    size_hint_x:None
                    width:300

                MDTextField:
                    hint_text: "Phone Number"
                    mode: "rectangle"
                    pos_hint:{'center_x': 0.5, 'center_y': 0.6}
                    size_hint_x:None
                    width:300

                MDTextField:
                    hint_text: "Reason to visit"
                    mode: "rectangle"
                    pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                    size_hint_x:None
                    width:300

                MDRectangleFlatButton:
                    text: "Select Date"
                    pos_hint: {'center_x': .3, 'center_y': .4}
                    size_hint_x:None
                    on_release: app.show_date_picker()

                MDRectangleFlatButton:
                    text: "Select Time"
                    pos_hint: {'center_x': .7, 'center_y': .4}
                    size_hint_x:None
                    on_release: app.show_time_picker()

                MDRectangleFlatButton:
                    text: "Submit"
                    pos_hint: {'center_x': .5, 'center_y': .3}
                    size_hint_x:None
